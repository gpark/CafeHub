<h3> Request New Sub </h3>
<div class="row"><div class="col-md-5">
<div class="panel panel-default"><div class="panel-body">
  <%= form_tag(new_sub_path, method: "get") do %>
    <%= select_tag :chosen_week, options_for_select(@weeks, @assignments_week.id), {class: "form-control form-control-wide"} %>
    <%= submit_tag("Select Week", class:"btn btn-default") %>
  <% end %>
    <%= form_for @sub do |f| %>
      <%= f.label "Select Assignment: " %>
      <%= f.select :assignment_id, @assignments, {}, {class: "form-control form-control-wide subs-assignment-select"} %>
       <br>
        <%= f.text_area(:comments, size: "30x3") %>
        <br>
        <%= f.label "Comments" %>
        <br><br>
      <%= f.submit "Submit", class:"btn btn-default" %>
    <% end %>
</div></div></div></div>
